<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/vk_share_gray_line</item>
    </style>

    <style name="ToolbarAppCompatStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarNoActionBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/vk_white</item>
        <item name="actionMenuTextColor">@color/vk_white</item>
        <item name="android:textColorSecondary">@color/vk_white</item>
    </style>

    <style name="ButtonStyleWithIcon">
        <item name="android:background">@drawable/button_main_shape</item>
        <item name="android:drawableRight">@drawable/round_pie_chart_24</item>
        <item name="android:textSize">12sp</item>
        <item name="android:font">@font/roboto_medium</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:minWidth">111dip</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:drawablePadding">-4dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_main_shape</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:minWidth">111dip</item>
    </style>

    <style name="ButtonBigWidth" parent="ButtonStyle">
        <item name="android:minWidth">160dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:font">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.LargeBold">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarStyleExpanded" parent="TextAppearance.AppCompat.Title">
        <item name="android:font">@font/roboto_medium</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="ToolbarStyleCollapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:font">@font/roboto_medium</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>